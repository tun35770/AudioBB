<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlFragment">

    <Button
        android:id="@+id/ControlFragment_PlayButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="@string/ControlFragment_PlayButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ControlFragment_PauseButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="@string/ControlFragment_PauseButton"
        app:layout_constraintEnd_toStartOf="@+id/ControlFragment_StopButton"
        app:layout_constraintStart_toEndOf="@+id/ControlFragment_PlayButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ControlFragment_StopButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="@string/ControlFragment_StopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/ControlFragment_SeekBar"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ControlFragment_PauseButton" />
</androidx.constraintlayout.widget.ConstraintLayout>